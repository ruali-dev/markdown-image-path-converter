{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MD图片路径转换器",
  "version": "1.0.0",
  "identifier": "com.mdconverter.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Markdown 图片路径转换器",
        "width": 800,
        "height": 650,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": [
          "SimpChinese"
        ]
      }
    }
  }
}